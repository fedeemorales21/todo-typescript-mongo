    {{#each task}}
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3>{{title}}</h3>
            </div>
            <div class="card-body">
                <p>{{description}}</p>
            </div>
            <div class="card-footer">
                <form action="/edit/{{_id}}" method="GET">
                    <input type="submit" class="btn btn-danger" value="EDIT">
                </form>
                <form action="/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-danger" value="DONE">
                </form>
            </div>
        </div>
    </div>
    {{/each}}